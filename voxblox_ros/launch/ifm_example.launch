<?xml version="1.0" encoding="ISO-8859-15"?>
<launch>
  <arg name="play_bag" default="true" />
  <arg name="bag_file" default="/home/fabian/Data/voxblox_test/bags/2019-04-16-08-46-14.bag"/>
  <arg name="voxel_size" default="0.10"/>
  <arg name="process_every_nth_frame" default="5" />
  <arg name="scale" default="0.5" />

  <node name="player" pkg="rosbag" type="play" output="screen" args=" -r 2.0 -d 0.5 --clock --quiet $(arg bag_file)" if="$(arg play_bag)"/>

  <node name="voxblox_node" pkg="voxblox_ros" type="esdf_server" output="screen" args="-alsologtostderr" clear_params="true">
    <remap from="pointcloud" to="/ifmo3x/center/object/obstacles"/>
    <remap from="freespace_pointcloud" to="/ifmo3x/center/freespace/obstacles"/>
    <param name="use_freespace_pointcloud" value="true" />
    <param name="tsdf_voxel_size" value="$(arg voxel_size)" />
    <param name="max_ray_length_m" value="5.0" />
    <param name="tsdf_voxels_per_side" value="8" />
    <param name="voxel_carving_enabled" value="true" />
    <param name="color_mode" value="colors" />
    <param name="world_frame" value="map" />
    <param name="use_tf_transforms" value="true" />
    <param name="verbose" value="true" />
    <param name="update_mesh_every_n_sec" value="1.0" />
    <param name="slice_level" value="0.0" />
    <param name="method" value="simple" />
    <param name="use_const_weight" value="false" />
    <param name="publish_slices" value="true" />
    <param name="publish_pointclouds" value="true" />
    <param name="mesh_filename" value="$(find voxblox_ros)/mesh_results/$(anon euroc).ply" />
  </node>
</launch>
